@{
	ViewData["Title"] = "Sign Up";
}

<h2>Sign Up</h2>
<form>
	First Name: <input name="firstname" type="text" placeholder="First Name"><br>
	Last Name: <input name="lastname" type="text" placeholder="Last Name"><br>
	User Name: <input name="username" type="text" placeholder="Username"><br>
	Password: <input name="password" type="password" placeholder=""><br>
	Confirm Password: <input name="confirm" type="password" placeholder=""><br>
	<input type="submit" value="Log in">
</form>